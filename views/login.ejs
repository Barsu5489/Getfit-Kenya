<%- include('partials/header') %>


    <main class="access">

        <%- include('partials/nav') %>
        <main class="access-point">
            <div class="log-header">
            <h2>Log In</h2>
        </div>
        <div class="form-divv">

        <form action="/login" method="post" class="login-form">
            

            <% if(error) { %>
                <p style="color: red"><%= message %></p>
            <% } %> 

            
            <input type="email" name="email" id="" value="<%= user.email %>" placeholder="Enter email address" required>
            
            <input type="password" name="password" id="" value="<%= user.password %>" placeholder="Enter passwaaaad" required>
            <input type="submit" value="Log In" id="submit">
            <p style="padding-bottom: 30px; color: white">Don't have an account? <a href="/signup" style="color: red;">Create One</a></p>
        </form>
    </div>
</main>

    </main>

